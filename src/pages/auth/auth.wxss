.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 80rpx 0 30rpx;
}

.userinfo-avatar {
    width: 200rpx;
    height: 200rpx;
    margin: 0 0 20rpx; 
    display: flex;
    overflow: hidden;
    justify-content: center;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 16px;
    color: #333;
}