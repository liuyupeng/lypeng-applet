/* pages/account/account_auth.wxss */

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 20px 0 30px;
}

.userinfo-avatar {
    width: 160rpx;
    height: 160rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.weui-btn-area .weui-btn {
    background: #a7292a;
    font-size: 16px;
    color: #FFFFFF;
}

.weui-btn-area .weui-btn[disabled]{
    background: #a7292a;
    font-size: 16px;
    color: #FFFFFF;
    opacity: 0.6;
}

input,picker,textarea {
    font-size: 16px;
}

.weui-label {
    font-size: 15px;
    color: #333;
    text-align: justify;
    text-align-last: justify;
    padding-right: 20px;
    padding-left: 1em;
    width: 3.8em;
    height: 1.5em;
}

.weui-label::after{
    content: " ";
    display: inline-block;
    width: 100%;
}

.weui-select {
    border-right: 0;
}

.tip_text {
    color: #808080; 
}
